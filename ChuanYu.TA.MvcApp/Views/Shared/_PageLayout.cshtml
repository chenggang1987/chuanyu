<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <style type="text/css">
        #header {
            width: 700px;
            margin-right: auto;
            margin-left: auto;
        }
        #bodycenter {
            width: 700px;
            margin-right: auto;
            margin-left: auto;
        }
        #sidebar {
            float: left;
            width: 280px;
        }

        #mainbody {
            float: right;
            width: 410px;
        }
        #footer {
            width: 700px;
            margin-right: auto;
            margin-left: auto;
            overflow: auto;
        }
    </style>
</head>
<body>
    <div>
        <div id="header">我是头部</div>
        <div id="bodycenter">
            <div id="sidebar">我是左侧菜单</div>
            <div id="mainbody">
                我是主体内容
                @RenderBody()
            </div>
        </div>
        <div id="footer">我是底部</div>
    </div>
</body>
</html>
